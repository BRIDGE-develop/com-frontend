    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/jest": "24.0.15",
        "@types/node": "12.0.10",
        "@types/react": "16.8.22",
        "@types/react-dom": "16.8.4",
        "@types/react-router-dom": "^4.3.4",
        "@types/validator": "^10.11.2",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
