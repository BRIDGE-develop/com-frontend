            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "proxy": "http://localhost:8080",
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --verbose && lint-staged",
            "post-merge": "post-npm-install"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": "eslint"
